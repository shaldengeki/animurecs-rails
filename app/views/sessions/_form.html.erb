<%= form_for(:session, :url => sessions_path, :html=>{:class => "form"}) do |f| %>
  <%= f.text_field :username, :class => "input-medium", :placeholder => "Username" %>
  <%= f.password_field :password, :class => "input-medium", :placeholder => "Password" %>
  <%= f.submit "Sign in", :class => "btn btn-small btn-primary" %> or <%= link_to "Register", {:controller => 'users', :action => 'new'}, :method => "get", :class => "btn btn-small" %>
<% end %>
