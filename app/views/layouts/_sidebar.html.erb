      <div id="sidebar">
        <% if @user %>
          <div id = 'userprofile' class="sidebar">
            <%= avatar_image %>
            <% if can? :edit, @user %><br />
            <%= link_to 'Edit', edit_user_path(@user) %> |
            <% end %>
          </div>
        <% elsif @show %>
        <div id="showprofile" class="sidebar">
          <%= show_image %>
          <% if can? :edit, @show %><br />
          <%= link_to 'Edit Anime Information', edit_show_path(@show) %><br />
          <% end
          if can? :destroy, @show %>
          <%= link_to 'Delete Anime', @show, :confirm => 'Are you sure you want to delete show: ' + @show.name + '?', :method => :delete %>
          <% end %><br />
        <% end %>
        <% if @popularTags %>
          <h5>Tags</h5>
          <%= render 'layouts/search' %>
          <div id="sidebar-tags">
            <%= show_tag_sidebar(@popularTags) %>
          </div>
        <% end %>
        <% if @show %>
        </div>
        <% end %>
      </div>