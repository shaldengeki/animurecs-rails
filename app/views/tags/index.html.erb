<%= if @tags.length > 0
will_paginate 
end %>
<table class="highlightable">
  <thead>
  <tr>
	<th>Shows</th>
    <th>Name</th>
    <th>Type</th>
    <th>Description</th>
  </tr>
  </thead>
  <tbody>

<% i = 0 %>
<% @tags.each do |tag| %>
<% if i % 2 == 1 %>
    <tr class = 'even'>
<% else %>
    <tr class = 'odd'>
<% end %>
	  <td><%= Tagging.where(:tag_id => tag.id).count %></td>
      <td><%= prettify_tag_link(tag) %></td>
      <td><%= Tagtype.find(tag.tagtype_id).name %><% if moderator_user? then %> (<%=link_to 'edit', edit_tag_path(tag) %>) (<%= link_to 'delete', tag, :confirm => 'Are you sure you want to delete tag:' + tag.name + '?', :method => :delete %>)<% end %></td>
      <td><%= tag_description_short(tag) %></td>
    </tr>
<% end %>
  </tbody>
</table>
<%= if @tags.length > 0
will_paginate 
end %>
