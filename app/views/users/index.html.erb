<h1>Users</h1>

<table>
  <tr>
    <th>Username</th>
    <th>Color</th>
    <th>User Type(s)</th>
<% if can? :edit, User %>
    <th></th>
<% end %>
<% if can? :destroy, User %>
    <th></th>
<% end %>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= link_to user.username, user %></td>
    <td><%= user.color %></td>
    <td><%= user.userroles.map{|userrole| userrole.name}.join(",") %></td>
<% if can? :edit, user %>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
<% end %>
<% if can? :destroy, user %>
  <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
<% end %>
  </tr>
<% end %>
</table>