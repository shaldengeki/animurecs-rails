<p id="notice"><%= notice %></p>

<div id = 'user_imagebox'>
<%= avatar_image %>
<% if current_user?(@user) || admin_user? %><br />
<%= link_to 'Edit', edit_user_path(@user) %> |
<% end %>
<%= link_to 'Back', users_path %>
</div>
<div id = 'user_infobox'>
	<p>
		<b>Username:</b>
		<%= @user.username %>
	</p>

	<p>
		<b>Color:</b>
		<%= @user.color %>
	</p>

	<p>
		<b>User type:</b>
		<%= user_type(@user) %>
	</p>
</div>