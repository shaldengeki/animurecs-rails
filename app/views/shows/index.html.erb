<h1>Listing shows</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Length</th>
    <th>Link</th>
    <th>Upvotes</th>
    <th>Downvotes</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @shows.each do |show| %>
  <tr>
    <td><%= show.name %></td>
    <td><%= show.description %></td>
    <td><%= show.length %></td>
    <td><%= show.link %></td>
    <td><%= show.upvotes %></td>
    <td><%= show.downvotes %></td>
    <td><%= link_to 'Show', show %></td>
    <td><%= link_to 'Edit', edit_show_path(show) %></td>
    <td><%= link_to 'Destroy', show, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

