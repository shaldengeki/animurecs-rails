<p id="notice"><%= notice %></p>

<%= show_image %>

<p>
  <b>Name:</b>
  <%= @show.name %>
</p>

<p>
  <b>Description:</b>
  <%= @show.description %>
</p>

<p>
  <b>Length:</b>
  <%= @show.length %>
</p>

<p>
  <b>Link:</b>
  <%= link_to @show.link, @show.link %>
</p>

<p>
  <b>Upvotes:</b>
  <%= @show.upvotes %>
</p>

<p>
  <b>Downvotes:</b>
  <%= @show.downvotes %>
</p>

<p>
  <b>Tags:</b>
  <%= tag_cloud %>
</p>

<h2>Comments:</h2>
<% unless @comments.empty? %>
<table class="comments" summary="Show comments">
  <%= render @comments %>
</table>
<% end %>

