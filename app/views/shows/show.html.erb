<p id="notice"><%= notice %></p>

<%= show_image %>
<div id = 'show_infobox'>
	<p>
	  <b>Name:</b>
	  <%= @show.name %>
	</p>

	<p>
	  <b>Description:</b>
	  <%= @show.description %>
	</p>

	<p>
	  <b>Length:</b>
	  <%= @show.length %>
	</p>

	<p>
	  <b>Link:</b>
	  <%= link_to @show.link, @show.link %>
	</p>

	<p>
	  <b>Voting:</b>
	  <%= like_image + " " + @show.upvotes.to_s %> | <%= dislike_image + " " + @show.downvotes.to_s %>
	</p>

	<p>
	  <b>Tags:</b>
	  <%= tag_cloud %>
	</p>
</div>

<h2>Comments:</h2>
<% unless @comments.empty? %>
<table class="comments" summary="Show comments">
  <%= render @comments %>
</table>
<% end %>

<%= link_to 'Comment', new_comment_path(:show_id => @show.id)%><br /><br />

<%= link_to 'Edit', edit_show_path(@show) %> |
<%= link_to 'Back', shows_path %>
